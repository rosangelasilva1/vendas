<div class="page-header">
  <%= link_to new_pedido_produto_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Pedido produto
  <% end %>
  <h1>Listar </h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Pedido</th>
            <th>Produto</th>
            <th>Valor</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @pedido_produtos) do |pedido_produto| %>
            <td><%= pedido_produto.pedido %></td>
            <td><%= pedido_produto.produto %></td>
            <td><%= pedido_produto.valor %></td>
            <td><%= link_to 'Mostrar', pedido_produto %></td>
        <td><%= link_to 'Editar', edit_pedido_produto_path(pedido_produto) %></td>
        <td><%= link_to 'Apagar', pedido_produto, method: :delete, data: { confirm: 'Confirma?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
